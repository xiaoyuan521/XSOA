<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>LRSXT</display-name>
  <welcome-file-list>
    <welcome-file>bin/index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.xsoa.task.DataTimerTaskListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>ServletConfigurator</servlet-name>
    <servlet-class>org.logicalcobwebs.proxool.configuration.ServletConfigurator</servlet-class>
    <init-param>
      <param-name>xmlFile</param-name>
      <param-value>/WEB-INF/classes/config/proxool.xml</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>log4j-init</servlet-name>
    <servlet-class>com.framework.log.Log4jInit</servlet-class>
    <init-param>
      <param-name>log4j</param-name>
      <param-value>/WEB-INF/classes/config/log4j.properties</param-value>
    </init-param>
    <init-param>
      <param-name>flag</param-name>
      <param-value>misty</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <filter>
    <filter-name>sqlFilter</filter-name>
    <filter-class>com.framework.core.SqlFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>sqlFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>NdcFilter</filter-name>
    <filter-class>com.framework.core.Log4jNdcFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NdcFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingUTF8</filter-name>
    <filter-class>com.framework.core.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingUTF8</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>com.framework.core.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
</web-app>